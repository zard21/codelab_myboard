<p id="notice"><%= notice %></p>

<h1>게시판</h1>

<table class="table">
  <thead>
    <tr>
      <th>제목</th>
      <th>내용</th>
      <th>태그</th>
      <th>작성자</th>
      <th>작성일시</th>
      <th>수정일시</th>
      <th>관리하기</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.tag %></td>
        <td><%= post.user.try(:name) %></td>
        <td><%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td><%= post.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td>
          <%= link_to '상세보기', post, class: 'btn btn-default' %>
          <%= link_to '수정하기', edit_post_path(post), class: 'btn btn-default' %>
          <%= link_to '삭제하기', post, method: :delete, data: { confirm: '정말 삭제하시겠습니까?' }, class: 'btn btn-default' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '새 글 작성하기', new_post_path, class: 'btn btn-default' %>
